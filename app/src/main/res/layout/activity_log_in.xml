<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.androidedu.kodluyoruzakademi.androquiz.LogIn">

    <TextView
        android:id="@+id/introduction"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/logInButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/logInButton"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="@string/welcomeText" />


    <TextView
        android:id="@+id/usernameText"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/introduction"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="62dp"
        android:gravity="center"
        android:text="@string/usernameText" />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameEditText"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:text="@string/passwordText" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/usernameText"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:text="" />


    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/usernameEditText"
        android:layout_alignRight="@+id/usernameEditText"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPassword"
        android:text="" />


    <Button
        android:id="@+id/logInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usernameEditText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/usernameEditText"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/logInButtonText" />


</RelativeLayout>
