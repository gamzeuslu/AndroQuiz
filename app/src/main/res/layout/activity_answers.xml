<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidedu.kodluyoruzakademi.androquiz.AnswersActivity">

    <TextView
        android:id="@+id/answersUsernameRetrieved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/username" />

    <TextView
        android:id="@+id/userAnswersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/answersUsernameRetrieved"
        android:layout_alignStart="@+id/answersUsernameRetrieved"
        android:layout_below="@+id/answersUsernameRetrieved"
        android:layout_marginTop="47dp"
        android:text="@string/user_answers_title" />

    <TextView
        android:id="@+id/userAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/userAnswersTitle"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/answer_one_retrieved" />

    <TextView
        android:id="@+id/userAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/userAnswer1"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/answer_two_retrieved" />

    <TextView
        android:id="@+id/userAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/userAnswer2"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/answer_three_retrieved" />

    <TextView
        android:id="@+id/userAnswer4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/userAnswer3"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/answer_four_retrieved" />

    <TextView
        android:id="@+id/userAnswer5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/userAnswer4"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="@string/answer_five_retrieved" />

</RelativeLayout>
